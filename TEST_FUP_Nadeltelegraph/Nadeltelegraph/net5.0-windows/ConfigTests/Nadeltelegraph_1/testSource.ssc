main()
{
    var P1R = Plc2Dec("2#0000_0000_0001")
    var P1L = Plc2Dec("2#0000_0000_0010")
    var P2R = Plc2Dec("2#0000_0000_0100")
    var P2L = Plc2Dec("2#0000_0000_1000")
